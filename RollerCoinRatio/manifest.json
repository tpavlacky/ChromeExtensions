{
    "manifest_version": 3,
    "name": "RollerCoin Ratio",
    "version": "1.0",
    "description": "Add ratio to RollerCoin's marketplace items",

    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },

    "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "run_at": "document_end",
      "matches": [
        "https://rollercoin.com/marketplace*"
      ]
    }
  ]
}